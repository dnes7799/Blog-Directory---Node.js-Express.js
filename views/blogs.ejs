<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") %>

    <body>
        <%- include("./partials/nav.ejs") %>

            <div class="blog content" style="position: relative">
                <h2> All blogs</h2>
                <% if (blogs.length> 0) { %>
                    <% blogs.forEach(blog=> { %>
                        <a class="single" href="/blogs/<%= blog._id %>">
                            <h3 class="title">
                                <%= blog.title %>
                            </h3>
                            <p class="snippet">
                                <%= blog.snippet %>
                            </p>
                        </a>
                    <% }) %>
                <% } else { %>
                        <p>There are no blogs to display...</p>
                    <% } %>
            </div>
            <a href="/blogs/create" style="position: relative; bottom: -3em;"><button class="button">Create your own
                    blog. </button></a>

            <!--footer-->
            <%- include("./partials/footer.ejs") %>

    </body>

</html>